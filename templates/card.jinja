<html lang="es">

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <link rel="stylesheet" href="{{ project_dir }}/assets/css/fonts.css" type="text/css" />
    <link rel="stylesheet" href="{{ project_dir }}/assets/css/card.css" type="text/css" />
</head>

<body>
    <div class="school-year">Curso<br>{{ school_year }}</div>
    <div class="group">{{ student.group }}</div>
    <div class="shift">Turno<br>{{ student.shift }}</div>

    <div class="name">{{ student.fullname }}</div>
    <div class="cial"><strong>CIAL </strong>{{ student.cial }}</div>
    <div class="exp"><strong>EXP: </strong> {{ student.exp }}</div>
    <div class="id"><strong>DNI: </strong> {{ student.id }}</div>
    <div class="study">{{ student.study }}</div>
    <div class="date-of-birth"><strong>NAC: </strong>{{ student.date_of_birth }} ({{ student.age }} aÃ±os)</div>
    <div class="list-number"><strong>LIST </strong>{{ student.list_number }}</div>

    <img class="profile-pic" src="{{ student.pic }}" />

    <img class="background" src="{{ project_dir }}/assets/img/background.png" />
    <img class="edu-logo" src=" {{ project_dir }}/assets/img/edu_logo.svg" />
    <img class="ies-logo" src="{{ project_dir }}/assets/img/ies_logo.svg" />

    {% if student.is_adult() %}
    <img class="adult" src="{{ project_dir }}/assets/img/adult.svg" />
    {% endif %}
</body>

</html>
